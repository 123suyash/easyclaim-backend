def COLOR_MAP = ['SUCCESS': 'good', 'FAILURE': 'danger', 'UNSTABLE': 'danger', 'ABORTED': 'danger']

pipeline {
    agent { label 'master'}
    tools {
        maven 'maven-3.6.3' 
    }
    parameters {
        booleanParam(name: 'maven-build', defaultValue: true, description: 'Enable/Disable maven Build')
        booleanParam(name: 'artifactory-build-publish', defaultValue: false, description: 'Enable/Disable Artifactory maven build and publish ')
        booleanParam(name: 'sonarqube', defaultValue: false, description: 'Enable/Disable Sonarqube Analysis')
        booleanParam(name: 'docker-build-push', defaultValue: true, description: 'Enable/Disable Docker build and push')
        booleanParam(name: 'deploy', defaultValue: false, description: 'Enable/Disable Deploy')
    }
    stages {
        stage ('Maven Build') {
            when {
                expression {
                    params.maven-build.toBoolean() == true
                }
            }
            steps {
                sh 'mvn clean package'
            }
        }
        stage ('Artifactory configuration') {
            when {
                expression {
                    params.artifactory-build-publish.toBoolean() == true
                }
            }
            steps {
                rtMavenDeployer (
                    id: "MAVEN_DEPLOYER",
                    serverId: "artifactory",
                    releaseRepo: "libs-release-local",
                    snapshotRepo: "libs-snapshot-local"
                )

                rtMavenResolver (
                    id: "MAVEN_RESOLVER",
                    serverId: "artifactory",
                    releaseRepo: "libs-release",
                    snapshotRepo: "libs-snapshot"
                )
            }
        }
        stage ('Exec Maven') {
            when {
                expression {
                    params.artifactory-build-publish.toBoolean() == true
                }
            }
            steps {
                rtMavenRun (
                    tool: 'maven',
                    pom: 'pom.xml',
                    goals: 'clean package',
                    deployerId: "MAVEN_DEPLOYER",
                    resolverId: "MAVEN_RESOLVER"
                )
            }
        }
        stage ('Publish build info') {
            when {
                expression {
                    params.artifactory-build-publish.toBoolean() == true
                }
            }
            steps {
                rtPublishBuildInfo (
                    serverId: "artifactory"
                )
            }
        }
        stage('SonarQube analysis') {
            when {
                expression {
                    params.sonarqube.toBoolean() == true
                }
            }
            environment {
                scannerHome = tool 'sonarscanner'
            }
            steps {
                withSonarQubeEnv('sonarqube') {
                    sh "${scannerHome}/bin/sonar-scanner"
                }
            }
        }
        stage('Docker Build and Push') {
            when {
                expression {
                    params.docker-build-push.toBoolean() == true
                }
            }
            steps {
                script {
                    myapp = docker.build("vigneshsweekaran/easyclaim-backend:${env.BUILD_ID}")
                    docker.withRegistry('https://registry.hub.docker.com', 'docker_credential') {
                        myapp.push("latest")
                        myapp.push("${env.BUILD_ID}")
                    }
                }
                sh "docker image prune -a -f"
            }
        }
        stage('Deploy to Kubernetes') {
            when {
                expression {
                    params.deploy.toBoolean() == true
                }
            }
            steps{
                sh "ansible-playbook deploy-playbook.yml"
            }
        }
    }
}
